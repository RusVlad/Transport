@page
@model Transport.Pages.Drivers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete driver: @Html.DisplayFor(model => model.Driver.Name)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.LicenseCategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.LicenseCategory.Category)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Driver.Id" />
        <a asp-page="./Index">Back to List</a> |
        <input type="submit" value="Delete" class="btn btn-danger ml-2" />
    </form>
</div>
