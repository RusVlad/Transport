@page
@model Transport.Pages.Drivers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h3>@Html.DisplayFor(model => model.Driver.Name)</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 w-100 mb-2">
            <b>
                @Html.DisplayNameFor(model => model.Driver.LicenseCategoryId)
            </b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.LicenseCategory.Category)
        </dd>
        <dt class="col-sm-2 w-100 mb-2">
            <b>
                @Html.DisplayNameFor(model => model.Driver.VehicleId)
            </b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.Vehicle.LicensePlate)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-page="./Edit" asp-route-id="@Model.Driver?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
