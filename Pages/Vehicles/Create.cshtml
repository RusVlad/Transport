@page
@model Transport.Pages.Vehicles.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h3>Create Vehicle</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-item mb-2">
                <label asp-for="Vehicle.LicensePlate" class="control-label"></label>
                <input asp-for="Vehicle.LicensePlate" class="form-control" />
                <span asp-validation-for="Vehicle.LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-item mb-2">
                <label asp-for="Vehicle.LicenseCategoryId" class="control-label"></label>
                <select asp-for="Vehicle.LicenseCategoryId" class ="form-control" asp-items="ViewBag.LicenseCategoryId" required></select>
                <span asp-validation-for="Vehicle.LicenseCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary ml-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
