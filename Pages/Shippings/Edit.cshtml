@page
@model Transport.Pages.Shippings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shipping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shipping.Id" />
            <div class="form-group">
                <label asp-for="Shipping.VehicleId" class="control-label"></label>
                <select asp-for="Shipping.VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="Shipping.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipping.DriverId" class="control-label"></label>
                <select asp-for="Shipping.DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                <span asp-validation-for="Shipping.DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipping.ClientId" class="control-label"></label>
                <select asp-for="Shipping.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Shipping.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Shipping.Status" class="control-label"></label>
                <select asp-for="Shipping.Status">
                    <option value="">Select a status</option>
                    <option value="Pending">Pending</option>
                    <option value="Delivered">Delivered</option>
                </select>
                <span asp-validation-for="Shipping.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
