    ViewData["Title"] = "Delete";
}

<div>
    <h3>Are you sure you want to delete this shipping</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.Vehicle.LicensePlate)
        </dd>
