@page
@model Transport.Pages.Shippings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="flex jcsb w-100 aic">
    <h1 class="mb-2">Shippings</h1>

    <a asp-page="Create" class="btn-primary">Create shipping</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shipping[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipping[0].Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipping[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipping[0].Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shipping) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
